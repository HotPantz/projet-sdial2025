<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.projetsdial.controller.MainController" xmlns:fx="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Numéro de salle:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="numeroSalleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Ajouter Salle" onAction="#handleAddSalle" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Personne : " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="nomPersonneField" promptText="Nom" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <TextField fx:id="prenomPersonneField" promptText="Prénom" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button text="Ajouter Personne" onAction="#handleAddPersonne" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
